{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    /* Path mapping for auto-generated types */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types/generated"],
      "@/types/*": ["src/types/generated/*"]
    },

    /* Linting */
    "strict": true,
  // Temporarily relaxed to allow legacy / prototype files to remain while focusing on event-stream work
  "noUnusedLocals": false,
  "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "src/types/**/*.d.ts"],
  "exclude": [
    "src/components/visualization/**",
    "src/components/NewArchTest.tsx",
    "src/components/tabs/NewArchTestTab.tsx",
    "src/components/dashboard/RealtimeChart.tsx",
    "src/components/dashboard/RealtimeChartNew.tsx",
    "src/components/charts/RealtimeChart.tsx",
    "src/components/HierarchicalEventMonitor.tsx",
    "src/components/dashboard/DomainStatusDashboard.tsx",
    "src/components/dashboard/DomainStatusDashboardDeprecated.tsx",
  // Exclude legacy generator output that has broken intra-module imports
  "src/types/src/types/generated/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
